extends layout

block content
    .row 
        .col-3
        .col-6
            p.h3.text-center.font-weight-bold.pb-4 Login
    .row
        .col-3
        .col-6
            .card
                .card-body
                    if errmsg
                        .alert.alert-danger
                            span=errmsg
                    form.form(action="/" method="POST")
                        .form-row.m-4
                            input.form-control(type="text" name="username" placeholder="Username" required)
                        .form-row.m-4
                            input.form-control(type="password" name="password" placeholder="Password" required)
                        .form-row.m-4
                            span Don't already have an account?&nbsp
                            a(href="/register")  Sign Up
                        .form-row
                            .col-10
                            .col-2
                                button.btn.btn-primary(type="submit") Submit

                    
