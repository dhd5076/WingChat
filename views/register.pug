extends layout

block content
    .row 
        .col-3
        .col-6
            p.h3.text-center.font-weight-bold.pb-4 Register
    .row
        .col-3
        .col-6
            .card
                .card-body
                    if errmsg
                        .alert.alert-danger
                            span=errmsg
                    form.form(action="/register" method="POST")
                        .form-row.m-4
                            input.col.form-control(type="text" name="firstname" placeholder="First Name" required)
                            input.col.ml-4.form-control(type="text" name="lastname" placeholder="Last Name" required)
                        .form-row.m-4
                            input.form-control(type="text" name="username" placeholder="Username" required)
                        .form-row.m-4
                            input.form-control(type="password" name="password" placeholder="Password" required)
                        .form-row.m-4
                            span Already have an account?&nbsp
                            a(href="/")  Login
                        .form-row
                            .col-10
                            .col-2
                                button.btn.btn-primary(type="submit") Submit